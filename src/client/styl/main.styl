
@import "reset"

// clear boilerplate styles in real project!

.container {
  width: 900px;
  margin: 0 auto;

  > div {
    padding: 30px;
  }
}

h1 {
  font-size: 24px;
  margin: 10px 0;
}

nav {
  background-color: black;
  font-size: 20px;

  a {
    display: inline-block;
    padding: 5px 20px;

    color: white;
    text-decoration: underline;

    cursor: pointer;
  }
}
